<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/read_img"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/shape_btn01"
        app:circularflow_radiusInDP="100dp"
        app:layout_constraintCircleRadius="100dp"
        app:circularflow_defaultRadius="100dp"
        android:src="@drawable/read"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:fontFamily="@font/abril_fatface"
        android:text="Welcome To The ULib"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/dark_back"
        android:textColorHighlight="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/read_img" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_btn01"
        android:backgroundTint="@color/back_ground_color"
        android:elevation="16dp"
        android:fontFamily="@font/aclonica1"
        android:shadowRadius="100"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:circularflow_defaultRadius="100dp"
        app:circularflow_radiusInDP="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_btn01"
        android:backgroundTint="@color/back_ground_color"
        android:elevation="16dp"
        android:fontFamily="@font/aclonica1"
        android:shadowRadius="100"
        android:text="CONTINUE WITHOUT LOGIN"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:circularflow_radiusInDP="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>